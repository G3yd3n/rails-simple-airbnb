<div class="col-6 col-md-4">
  <div class="card">
      <div class="p-3 bg-light">
        <h5 class="card-title"><strong><%= link_to flat.name, flat_path(flat) %></strong></h5>
        <p class="card-text">Address: <%= flat.address %></p>
        <p class="card-text">Number of guests: <%= flat.number_of_guests%></p>
        <p class="card-text">Price per Night: <%= flat.price_per_night %></p>
      </div>
      <div class="p-2">
        <%= link_to "More Info", flat_path(flat), class:"text-primary pr-1" %>
        <%= link_to "Edit", edit_flat_path(flat), class:"text-warning pr-1" %>
        <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" },class:"text-danger pr-1" %>
      </div>
  </div>
</div>
